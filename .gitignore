for (const exc of listExc) {
  const rawVal = exc.defaultValue || '';

  // Regex que só aceita dígitos e ponto decimal (ex.: "375", "375.00", "12.5")
  const numericRegex = /^[0-9]+(\.[0-9]+)?$/;

  let finalText = rawVal;
  if (numericRegex.test(rawVal)) {
    // É estritamente numérico => converte e formata
    const num = parseFloat(rawVal);
    finalText = `$${num.toFixed(2)}`;
  }
  // Caso contrário, finalText continua sendo rawVal (texto extenso)

  field.exceptionOptions.push({
    approvedByDoubleA: null,
    value: rawVal,
    text: finalText,
    visible: true,
    retired: false,
    parameterOptionId: exc.parameterOptionId,
  });
}
