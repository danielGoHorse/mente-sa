applyStandardAmounts(fees, stdRows);
applyExceptionAmounts(fees, excRows);

// Ajuste labelValue dos campos Equity/Options:
fees.forEach(fee => {
  const stdGrp = findGroup(fee, 'Standard Fees');
  const currGrp = findGroup(fee, 'Client Current Fees');
  if (stdGrp) {
    const fld = stdGrp.fields.find(f => f.code === 7);
    setEquityOptionLabel(fld, excRows);
  }
  if (currGrp) {
    const fld = currGrp.fields.find(f => f.code === 7);
    setEquityOptionLabel(fld, excRows);
  }
});
