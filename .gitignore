// No seu DomesticInternacionalTab
import { useFormContext } from 'react-hook-form';

const DomesticInternacionalTab = (data: IData, useFormObject: any) => {
  // Obtém os métodos do hook form
  const { register, watch, setValue } = useFormContext();

  const selectedBank = watch('bank'); // "Observa" o valor do campo bank

  const handleBankSelection = (bank: string) => {
    // Seta diretamente o valor do campo no Hook Form
    setValue('bank', bank);
  };

  return (
    <TabsContent value="processing-bank-of-america" className="data-[state=inactive]:hidden">
      {/* ... */}
      <div className="flex flex-grow gap-4">
        <div className='...'>
          {/* Como é um componente Custom (RadioButton), passamos o onChange manual */}
          <RadioButton 
            name="bank" 
            onChange={() => handleBankSelection('payplus')}
            checked={selectedBank === 'payplus'} // Para refletir o estado atual no input
          >
            <label>Payplus</label>
          </RadioButton>
          {/* ... */}
        </div>

        <div className='...'>
          <RadioButton
            name="bank"
            onChange={() => handleBankSelection('bank-of-america')}
            checked={selectedBank === 'bank-of-america'}
          >
            <label>Bank of America</label>
          </RadioButton>
          {/* ... */}
        </div>
      </div>
      {/* ... */}
    </TabsContent>
  );
};
