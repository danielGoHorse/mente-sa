/*  Ajusta o labelValue do grupo “Exception Request”
    — garante que ele reflita APENAS o defaultValue                 */
function syncExceptionLabels(feesArray) {
  feesArray.forEach(fee => {
    const excGroup = fee.feeGroups?.find(
      g => g.name === 'Exception Request'
    );
    if (!excGroup) return;

    excGroup.fields.forEach(f => {
      const val = f.defaultValue;         // '' | '0' | '45' | ...
      f.labelValue = val
        ? numberToCurrency(Number(val))
        : '$0.00';                        // deixe '' se quiser vazio
    });
  });
}
