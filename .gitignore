<div
  /* contêiner principal do modal */
  className="relative bg-white rounded-lg p-8 min-w-[400px]"
  onClick={stopPropagation}
  onMouseEnter={stopPropagation}
>
  {/* ─────────────────────────────────────────
      ▸ PONTA (triângulo invertido)
      ───────────────────────────────────────── */}
  <span
    className="
      absolute           /* posição absoluta em relação ao contêiner */
      left-1/2           /* centraliza horizontalmente */
      -bottom-3          /* cola na parte de baixo e desce 3px */
      -translate-x-1/2   /* corrige para o centro exato */
      w-0 h-0            /* sem largura/altura, só bordas */
      border-x-[12px] border-x-transparent   /* lados transparentes  */
      border-t-[12px] border-t-white         /* topo branco → triângulo */
      drop-shadow-sm                         /* mesmo sombreado do modal */
      pointer-events-none                    /* não captura cliques */
    "
  />
  {/* ─────────── FIM DO TRIÂNGULO ─────────── */}

  {/* … resto do modal (botão ✕, título, timeline, etc.) */}
