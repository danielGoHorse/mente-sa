{isApprovalsStep ? (
  <>
    {/* Agrupamos tudo num contêiner relativo para posicionar o quadradinho */}
    <div className="relative flex flex-col items-center">
      {/* 1 ▸ CÍRCULO – fica na posição original */}
      <Timeline.Circle status={statusValue} />

      {/* 2 ▸ QUADRADINHO – dispara o modal ao hover/focus */}
      <span
        className="absolute -bottom-3 left-1/2 -translate-x-1/2 z-20 cursor-pointer"
        onMouseEnter={() => setShowApprovalsModal(true)}
        onFocus={() => setShowApprovalsModal(true)}
      >
        <Timeline.Link status={statusValue} />
      </span>

      {/* 3 ▸ Espaço extra para o texto não colar no quadradinho */}
      <div className="h-4" />

      {/* 4 ▸ TEXTO */}
      <Timeline.Text>{step.name}</Timeline.Text>
    </div>

    {/* MODAL */}
    <TimelineApprovalsModal
      open={showApprovalsModal}
      onClose={() => setShowApprovalsModal(false)}
      data={approvalsSteps}
    />
  </>
) : (
  /* renderização dos demais steps permanece igual */
  <>
    <Timeline.Circle status={statusValue} />
    <Timeline.Text>{step.name}</Timeline.Text>
  </>
)}
