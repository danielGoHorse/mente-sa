import BaseHttp from './BaseHttp.js';

export default class Customer extends BaseHttp {
  #getCustomerDetails = 'customer/v1';

  constructor({ logger, environment }) {
    super(logger, environment.customerUrl);
    console.log("ğŸ”¹ Customer Base URL:", environment.customerUrl);
  }

  async getCustomerDetailsByCif(cif) {
    if (!this.baseUrl) {
      console.error("âŒ Erro: Base URL nÃ£o estÃ¡ definida!");
      throw new Error("Base URL nÃ£o definida para Customer.");
    }

    const url = `${this.baseUrl}/${this.#getCustomerDetails}/${cif}`;
    console.log("ğŸ”¹ URL do Customer gerada:", url);

    try {
      const [error, response] = await this.httpRequest.get(url);
      if (error) {
        console.error("âŒ Erro ao buscar detalhes do cliente:", error);
        return [error, null];
      }
      return [null, response];
    } catch (err) {
      console.error("âŒ ExceÃ§Ã£o ao chamar a API do Customer:", err.message);
      return [err.message, null];
    }
  }
}
