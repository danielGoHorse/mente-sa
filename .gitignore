async #getExceptionFeesFromSQL(feePackageId) {
    const connection = await connectToFeeMgmtDb();
    const data = await executeStoreProcedure(
        connection,
        'sp_get_exception_fees_bypackage',
        { feePackageId }
    );

    // Construir a estrutura correta do exceptionOptions
    return data.map((exception) => ({
        approvedByDoubleA: null, // Campo fixo
        value: exception.Amount?.toString() || '0', // Mapeia para o Amount do SQL
        text: `$${parseFloat(exception.Amount || 0).toFixed(2)}`, // Formata como moeda
        visible: true, // Campo fixo
        retired: false, // Campo fixo
        _id: exception.FeeParameterOptionId, // Mapeia para FeeParameterOptionId
        parameterOptionId: exception.FeeParameterOptionId // Mesmo valor do _id
    }));
}
