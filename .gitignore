// src/core/helpers/sqlFeeTypeMap.js
export function sqlToFeeType({ FeeCode, BPSFeeTypeCode }) {
  const byFeeCode = {
    JH001: 1,
    JH002: 2,
    JH010: 3,
    JH009: 4,
  };
  const byBpsCode = {
    S: 5,
    C: 6,
    E: 7,
    O: 7, // ajuste se for diferente
  };

  if (FeeCode && byFeeCode[FeeCode]) return byFeeCode[FeeCode];
  if (BPSFeeTypeCode && byBpsCode[BPSFeeTypeCode]) return byBpsCode[BPSFeeTypeCode];

  // fallback: deixa como vem do SQL ou 0 para ignorar
  return 0;
}
