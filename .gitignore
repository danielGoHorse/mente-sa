{steps.map((step, idx) => (
  <React.Fragment key={step.id || idx}>
    <TableStep.Title>{step.name}</TableStep.Title>
    {/* Aqui TableStep.Columns/TableStep.Body dos participantes desse step */}

    {/* Se for o step de approvals, renderiza os substeps */}
    {step.name === "Approvals and Restrictions" && step.substeps && (
      step.substeps.map((sub, subIdx) => (
        <React.Fragment key={sub.id || subIdx}>
          <TableStep.Title>{sub.name}</TableStep.Title>
          {/* TableStep.Columns/TableStep.Body dos participantes do substep */}
        </React.Fragment>
      ))
    )}
  </React.Fragment>
))}
