import React, { useState } from 'react';

interface ClientInfo {
  name: string;
  id: string;
  email: string;
  phone: string;
}

const mockClientData: ClientInfo = {
  name: 'João da Silva',
  id: '123456',
  email: 'joao.silva@example.com',
  phone: '(11) 99999-8888',
};

const ClientSearch: React.FC = () => {
  const [searchTerm, setSearchTerm] = useState('');
  const [clientInfo, setClientInfo] = useState<ClientInfo | null>(null);

  const handleSearch = () => {
    // Aqui ficará a lógica real de busca futuramente
    if (searchTerm.trim()) {
      setClientInfo(mockClientData);
    }
  };

  return (
    <div className="max-w-md mx-auto mt-8 p-6 bg-white rounded shadow">
      <div className="flex gap-2">
        <input
          type="text"
          placeholder="Pesquisar cliente..."
          className="w-full border px-4 py-2 rounded"
          value={searchTerm}
          onChange={(e) => setSearchTerm(e.target.value)}
        />
        <button
          onClick={handleSearch}
          className="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors"
        >
          Buscar
        </button>
      </div>

      {clientInfo && (
        <div className="mt-6 border-t pt-4">
          <p><strong>Nome:</strong> {clientInfo.name}</p>
          <p><strong>ID:</strong> {clientInfo.id}</p>
          <p><strong>Email:</strong> {clientInfo.email}</p>
          <p><strong>Telefone:</strong> {clientInfo.phone}</p>
        </div>
      )}
    </div>
  );
};

export default ClientSearch;
