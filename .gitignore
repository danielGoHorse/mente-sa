import React, { useState } from 'react';
import Card from '@/components/ui/Card';
import Search from '@/components/ui/Search';

interface ClientInfo {
  name: string;
  id: string;
  email: string;
  phone: string;
}

const mockClientData: ClientInfo = {
  name: 'JoÃ£o da Silva',
  id: '123456',
  email: 'joao.silva@example.com',
  phone: '(11) 99999-8888',
};

const ClientSearch: React.FC = () => {
  const [clientInfo, setClientInfo] = useState<ClientInfo | null>(null);

  const handleSearchSelect = () => {
    setClientInfo(mockClientData);
  };

  return (
    <div className="max-w-md mx-auto mt-8 p-6 bg-white rounded shadow">
      <Search
        placeholder="Pesquisar cliente..."
        suggestions={[mockClientData.name]}
        onSelect={handleSearchSelect}
      />

      {clientInfo && (
        <div className="mt-6">
          <Card
            border
            size="medium"
            title={clientInfo.name}
            subtitle={`ID: ${clientInfo.id}`}
            subtitleInfo={clientInfo.email}
            status={{ type: "approved", text: "Ativo" }}
          />
        </div>
      )}
    </div>
  );
};

export default ClientSearch;
