import React from 'react';

interface CustomRadioButtonProps {
  /** Identificador de grupo (mesmo name = pertencem ao mesmo grupo) */
  name: string;
  /** Valor que este radio representa */
  value: string;
  /** Se este radio está marcado */
  checked?: boolean;
  /** Desabilita a interação do usuário */
  disabled?: boolean;
  /** Handler chamado quando o usuário seleciona este radio */
  onChange?: (value: string) => void;
  /** Conteúdo que aparece ao lado do radio (pode ser texto ou outro JSX) */
  children?: React.ReactNode;
  /** Classe extra para estilização */
  className?: string;
}

const CustomRadioButton: React.FC<CustomRadioButtonProps> = ({
  name,
  value,
  checked = false,
  disabled = false,
  onChange,
  children,
  className,
}) => {

  // Dispara o onChange passando o value
  const handleChange = (event: React.ChangeEvent<HTMLInputElement>) => {
    if (onChange) {
      onChange(event.target.value);
    }
  };

  return (
    <label
      className={className}
      style={{
        display: 'inline-flex',
        alignItems: 'center',
        cursor: disabled ? 'not-allowed' : 'pointer',
      }}
    >
      <input
        type="radio"
        name={name}
        value={value}
        disabled={disabled}
        checked={checked}
        onChange={handleChange}
        style={{ marginRight: '0.5rem' }}
      />
      {children}
    </label>
  );
};

export default CustomRadioButton;
